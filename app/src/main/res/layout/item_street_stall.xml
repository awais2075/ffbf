<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:background="?attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_streetStallImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/sample_image" />

            <TextView
                android:id="@+id/textView_streetStallName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_streetStallImage"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Refreshment Center"
                android:textColor="#4c4c4c"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/textView_streetStallLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_streetStallName"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Dhoke Sayedan Road Rawalpindi"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/textView_streetStallFoodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_streetStallImage"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/stat_notify_more"
                android:text="Vegetarian"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>