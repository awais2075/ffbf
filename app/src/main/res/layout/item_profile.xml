<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/_10sdp">


    <ImageView
        android:id="@+id/imageView_profile"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/drawable_circle"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_fullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Ben Stokes"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintLeft_toRightOf="@id/imageView_profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView_profile" />

    <TextView
        android:id="@+id/textView_userType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@drawable/drawable_rectangle"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="User"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/textView_fullName"
        app:layout_constraintRight_toRightOf="@id/textView_fullName"
        app:layout_constraintTop_toBottomOf="@id/textView_fullName" />
</androidx.constraintlayout.widget.ConstraintLayout>